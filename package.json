  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "run-s clean build:ts",
    "build:ts": "tsc -b",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test --ui",
    "test:e2e:ci": "playwright test",
    "test:e2e:show": "playwright show-report",
    "lint:ci": "eslint .",
    "lint": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "allure": "run-s allure:test allure:history allure:generate allure:open",
    "allure:test": "zx scripts/allure/index.zx.mjs",
    "allure:history": "node scripts/allure/history.mjs",
    "allure:generate": "allure generate reports/allure-results --clean --report-dir reports/allure-report",
    "allure:open": "allure open reports/allure-report -p 4000",
    "allure:ci": "zx scripts/allure/ci.zx.mjs"
  },
