    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "fs-extra": "^11.2.0",
    "globals": "^15.11.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
