    "@swc/jest": "^0.2.36",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.13",
    "@types/jest-json-schema": "^6.1.4",
